<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="author" content="Sarah Hanson">
	<% include ./partials/commonHeaderContent.ejs %> 
  </head>
  <body>
  	<% include ./partials/navBar.ejs %> 	
	<!-- Handle Login Checking here -->
	<div class="jumbotron sticky-top jumbo-bg fill pt-50">	
		<div class="jumbotron text-center md-10 p-2 pt-0 light see-through">
		
			<form id="bookForm" method="post" action="/post_booking" targets="_blank" class ="display-7 font-weight-bold salad">
				<div class="form-row">
					<label for="package"> Package </label>
					<select type="text" class="form-control" id="packageNum" placeholder="Select Package" name="package" onblur="if(this.value != ''){this.style.backgroundColor = ''}else{this.style.backgroundColor = '#f0cccc'};" onchange="changePkg">
						<% 
							var packageSelect ="";
							for (i=0;i<pkgList.length;i++) {
								console.log(pkgList[i].PkgName);
								packageSelect+="<option value=\""
								+ pkgList[i].PackageId
								+ "\">"
								+ pkgList[i].PkgName
								+ "</option>";
							}
						%>
						<%- packageSelect %>
					</select> 
					<img class="img-responsive img-fluid mx-auto rounded-circle" src="">
				</div>
				<div class="form-row">
					<div class="form-group col-9">
						<div class="col">
							<label for="pkgStart"> Start Date </label>
							<input type="text" class="form-control" placeholder="end date" id="pkgEnd" name="end" readonly>
						</div>
						<div class="col">
							<label for="pkgEnd"> End Date </label>
							<input type="text" class="form-control" placeholder="start date" id="pkgStart" name="start" readonly>
						</div>
					</div>
				</div>
				<label for="travellers"> Travellers </label> <br>
				<input type="number" id="travellers" min="1" name="travellers">
				<div class= "form-row">
					<button type="submit" class="btn btn-primary" >Book Now</button>
				</div>
			</form>	
		</div>
	</div>
	
	<% include ./partials/bootStrapScripts.ejs %> 
  </body>
</html>